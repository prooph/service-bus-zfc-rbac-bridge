{
    "name": "prooph/service-bus-zfc-rbac-bridge",
    "description": "Marry Service Bus with ZfcRbac",
    "homepage": "http://getprooph.org/",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Alexander Miertsch",
            "email": "contact@prooph.de",
            "homepage": "http://www.prooph.de"
        },
        {
            "name": "Sascha-Oliver Prolic",
            "email": "saschaprolic@googlemail.com"
        },
        {
            "name": "Bas Kamer",
            "email": "baskamer@gmail.com"
        }
    ],
    "repositories" : [
        {
            "type": "git",
            "url":  "git@github.com:basz/zfc-rbac.git"
        }
    ],
    "keywords": [
        "prooph",
        "CQRS",
        "messaging",
        "rbac"
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.1",
        "prooph/service-bus": "^6.0",
        "zf-commons/zfc-rbac": "^2.5.2 || ^3.0"
    },
    "require-dev": {
        "zendframework/zend-authentication": "^2.5",
        "phpunit/phpunit": "^6.0",
        "prooph/php-cs-fixer-config": "^0.1",
        "satooshi/php-coveralls": "^1.0",
        "phpspec/prophecy": "^1.7",
        "malukenho/docheader": "^0.1"
    },
    "autoload": {
        "psr-4": {
            "Prooph\\ServiceBusZfcRbacBridge\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ProophTest\\ServiceBusZfcRbacBridge\\": "tests/"
        }
    },
    "scripts": {
        "check": [
            "@cs",
            "@test",
            "@header"
        ],
        "cs": "php-cs-fixer fix -v --diff --dry-run",
        "cs-fix": "php-cs-fixer fix -v --diff",
        "header": "docheader check config src tests",
        "test": "phpunit"
    }
}
